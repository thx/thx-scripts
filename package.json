{
  "name": "thx-scripts",
  "version": "0.0.1-alpha.7",
  "description": "微前端构建工具，内置支持 Webpack5 模块邦联。",
  "keywords": [
    "micro-frontends-solution",
    "webpack5-module-federation"
  ],
  "main": "build/index.js",
  "bin": {
    "thx-scripts": "build/index.js"
  },
  "types": "./types/index.d.ts",
  "scripts": {
    "========== dev ==========": "",
    "start": "npm-run-all -p dev madge:watch docs:watch",
    "dev": "tsc --watch --pretty --preserveWatchOutput --project tsconfig.json",
    "test": "mocha --full-trace --require ts-node/register --project tsconfig.json 'test/**/*.test.ts'",
    "test:watch": "nodemon --verbose --ext js,ts,tsx,json --ignore node_modules --ignore build --watch src --watch test --watch package.json --exec 'yarn run test'",
    "linter": "standard --fix src",
    "check": "yarn run linter; yarn run test;",
    "check:deps": "yarn check --verify-tree; yarn outdated; npx depcheck;",
    "madge": "madge --image ./docs/thx-scripts.png src/start.ts src/build.ts",
    "madge:watch": "nodemon --verbose --ext js,ts,tsx,json --watch src --exec 'yarn run madge'",
    "docs": "typedoc --out ../../docs/core lib",
    "docs:watch": "nodemon --verbose --ext js,ts,tsx,json --watch lib --exec 'yarn run docs'",
    "========== build ==========": "",
    "build": "tsc --listEmittedFiles --project tsconfig.json",
    "build:clean": "rm -rf ./dist && yarn run build",
    "========== examples ==========": "",
    "examples:start": "npm-run-all --parallel start:react-*",
    "start:react-app": "cd examples/react-app && yarn install && yarn start;",
    "========== link ==========": "",
    "examples:link": "yarn link; npm-run-all --parallel link:*",
    "link:react-app": "cd examples/react-app && yarn link thx-scripts thx-portal",
    "========== release ==========": "",
    "release": "standard-version",
    "alpha": "npm run release -- --release-as prerelease",
    "contributors": "ali-contributors",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "dependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/plugin-proposal-private-methods": "^7.14.5",
    "@babel/plugin-proposal-private-property-in-object": "^7.14.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/runtime": "^7.15.3",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@vitejs/plugin-react": "^1.3.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.10.6",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cross-spawn": "^7.0.1",
    "crypto-browserify": "^3.12.0",
    "css-loader": "^5.0.1",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^5.2.0",
    "json-loader": "^0.5.7",
    "json5": "^2.1.3",
    "kill-port": "^2.0.1",
    "less": "^4.0.0",
    "less-loader": "^7.0.0",
    "log4js": "^6.3.0",
    "moment": "^2.29.4",
    "node-fetch": "^2.6.1",
    "open": "^8.4.0",
    "os-browserify": "^0.3.0",
    "portfinder": "^1.0.28",
    "raw-loader": "^4.0.1",
    "react-refresh": "^0.9.0",
    "react-svg-loader": "^3.0.1",
    "sass": "^1.49.9",
    "sass-loader": "^10.0.1",
    "stream-browserify": "^3.0.0",
    "style-loader": "^2.0.0",
    "url-loader": "^4.1.0",
    "vite": "^2.9.1",
    "webpack": "^5.50.0",
    "webpack-bundle-analyzer": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpackbar": "^5.0.0-3"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.6",
    "@types/node-fetch": "^2.6.2",
    "@types/webpack-dev-server": "^3.11.1",
    "chai": "^4.3.6",
    "fs-extra": "^10.1.0",
    "madge": "^4.0.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^15.4.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "files": [
    "build",
    "docs",
    "src",
    "test",
    "types",
    "CHANGELOG.md",
    "package.json",
    "README.md",
    "tsconfig.json",
    "yarn.lock"
  ],
  "license": "UNLICENSED"
}
