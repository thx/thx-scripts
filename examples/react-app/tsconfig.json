{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "target": "es5",
    "module": "esnext",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom",
      "webworker"
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  }
}